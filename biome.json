{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "include": ["**/*.js", "**/*.ts", "**/*.json"],
    "ignore": ["**/package.json"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "always"
    }
  }
}
